<%layout("./layouts/boilerplate")%>
<body>
<div class="row mt-3">
    
    <div class="col-8 offset-2" >
        <br><br>
        <h3>Create a New List</h3>
    <form method="POST" action="/listings" novalidate  class="needs-validation" enctype="multipart/form-data">
        <div class ="mb-3">
         <label for="title" class="from-label">Title</label>
        <input name="listing[title]"
         placeholder="Enter title"
          type="text"
           class="form-control" required>
           <div class="valid-feedback"> Title Looks good!</div>
        </div>
        <div  class ="mb-3">
             <label for="description" class="from-label">Description</label>
             <textarea name="listing[description]"
              class="form-control"  required></textarea>
          <div class="invalid-feedback">Please,provide description.</div>
        </div>
       
       <div class ="mb-3">
        <label for="image" class="from-label">Upload Image</label>
        <input name="listing[image]" placeholder="Enter image url" type="file" class="form-control" required>
        
       </div>
       <div class="row">
        <div class ="mb-3 col-md-4" >
            <label for="price" class="from-label">Price</label>
            <input name="listing[price]"
             placeholder="Enter price"
              
              class="form-control" required>
        <div class="invalid-feedback">Price should be Valid.</div>
        </div>
        <div class ="mb-3 col-md-8">
            <label for="location" class="from-label">Location</label>
            <input name="listing[location]"
             placeholder="Enter location"
              type="text" 
              class="form-control" required>
              <div class="invalid-feedback">Location should be Valid.</div>
        </div>
        </div>
        <div class ="mb-3">
           <label for="country" class="from-label">Country</label> 
           <input name="listing[country]"
            placeholder="Enter country" 
            type="text" class="form-control" required>
            <div class="invalid-feedback">Country name should be Valid.</div>
        </div>
        
        <br><br>
        <button class="btn btn-dark add-btn mt-3">ADD</button>
        <br><br>
    </form>
    </div>
</div>
</body>

